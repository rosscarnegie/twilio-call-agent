{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    // "typeRoots": ["./node_modules/@types"],
    //"baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/*",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "../node_modules/*",
    "../../node_modules/*",
    "build",
  ]
}